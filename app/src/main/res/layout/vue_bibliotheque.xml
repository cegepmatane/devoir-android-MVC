<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".vue.Bibliotheque">

    <ListView
        android:id="@+id/vue_bibliotheque_liste_livre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />

    <Button
        android:id="@+id/vue_bibliotheque_action_naviguer_ajouter_livre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter un livre"
        app:layout_constraintTop_toBottomOf="@+id/vue_bibliotheque_liste_livre"

        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>